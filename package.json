{
  "name": "obora",
  "version": "0.1.0",
  "description": "Multi-AI Debate System for Collaborative Problem Solving",
  "license": "MIT",
  "type": "module",
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "obora": "bun packages/cli/src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "format": "biome format --write",
    "check": "biome check --write && tsc --noEmit",
    "docs": "typedoc",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/bun": "latest",
    "husky": "9.1.7",
    "typedoc": "0.28.15",
    "typescript": "^5"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "0.71.2",
    "openai": "6.15.0",
    "yaml": "2.8.2"
  }
}
