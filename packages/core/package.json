{
  "name": "@obora/core",
  "version": "0.1.0",
  "description": "Multi-AI Debate Engine - Core Library",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./engine": {
      "types": "./dist/engine/index.d.ts",
      "import": "./dist/engine/index.js",
      "default": "./dist/engine/index.js"
    },
    "./providers": {
      "types": "./dist/providers/index.d.ts",
      "import": "./dist/providers/index.js",
      "default": "./dist/providers/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js",
      "default": "./dist/config/index.js"
    },
    "./auth": {
      "types": "./dist/auth/index.d.ts",
      "import": "./dist/auth/index.js",
      "default": "./dist/auth/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "build": "bun run build:js && bun run build:types",
    "build:js": "bun build ./src/index.ts ./src/engine/index.ts ./src/providers/index.ts ./src/config/index.ts ./src/auth/index.ts --outdir ./dist --target node --format esm --splitting",
    "build:types": "tsc -p tsconfig.build.json",
    "prepublishOnly": "bun run build",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "3.0.2",
    "@ai-sdk/google": "3.0.2",
    "@ai-sdk/openai": "3.0.2",
    "ai": "6.0.5",
    "yaml": "^2.3.4"
  },
  "optionalDependencies": {
    "@anthropic-ai/sdk": "^0.36.0",
    "@google/generative-ai": "^0.24.0",
    "openai": "^4.73.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5",
    "zod": "4.3.4"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": ">=0.30.0",
    "@google/generative-ai": ">=0.1.0",
    "openai": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "@anthropic-ai/sdk": {
      "optional": true
    },
    "@google/generative-ai": {
      "optional": true
    },
    "openai": {
      "optional": true
    }
  },
  "keywords": [
    "ai",
    "llm",
    "debate",
    "multi-agent",
    "claude",
    "openai",
    "gemini",
    "orchestration"
  ],
  "author": {
    "name": "de-novo",
    "url": "https://github.com/de-novo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/de-novo/obora.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/de-novo/obora#readme",
  "bugs": {
    "url": "https://github.com/de-novo/obora/issues"
  },
  "license": "MIT"
}
